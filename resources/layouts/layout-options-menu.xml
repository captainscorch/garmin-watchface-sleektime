<layout id="OptionsMenu">
  <text-area id="Title" x="left" y="0%" width="fill" height="25%" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER">
    <fonts>
      <font>Gfx.FONT_TINY</font>
      <font>Gfx.FONT_XTINY</font>
    </fonts>
</text-area>
  <button id="PreviousItem" class="OptionsItem" x="left" y="22%" width="fill" height="25%" behavior="onPreviousPage" />
  <button id="CurrentItem" class="OptionsItem" x="left" y="47%" width="fill" height="25%" behavior="onSelect" />
  <button id="NextItem" class="OptionsItem" x="left" y="72%" width="fill" height="25%" behavior="onNextPage" />
</layout>